@page
@model IdentityServer.Pages.Admin.UsersModel
@{
    ViewData["Title"] = "User Management";
}

<div class="container mt-4">
    <h1>User Management</h1>
    <p class="lead">View and manage custom user information</p>

    <div class="mb-3">
        <a href="/api/Users" class="btn btn-sm btn-outline-primary">API: All Users (JSON)</a>
        <a href="/api/Users/active" class="btn btn-sm btn-outline-success">API: Active Users (JSON)</a>
        <a href="/api/Users/inactive" class="btn btn-sm btn-outline-secondary">API: Inactive Users (JSON)</a>
    </div>

    @if (Model.Users.Any())
    {
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Registered Users (@Model.Users.Count())</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Username</th>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Company</th>
                                <th>Job Title</th>
                                <th>Status</th>
                                <th>Last Login</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Users)
                            {
                                <tr class="@(!user.IsActive ? "table-secondary" : "")">
                                    <td>
                                        <strong>@user.UserName</strong>
                                    </td>
                                    <td>@user.FullName</td>
                                    <td>@user.Email</td>
                                    <td>@user.Company</td>
                                    <td>@user.JobTitle</td>
                                    <td>
                                        @if (user.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        @if (user.LastLoginAt.HasValue)
                                        {
                                            <small>@user.LastLoginAt.Value.ToString("g")</small>
                                        }
                                        else
                                        {
                                            <small class="text-muted">Never</small>
                                        }
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-sm btn-outline-info" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#userModal-@user.Id">
                                            Details
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        @* User Detail Modals *@
        @foreach (var user in Model.Users)
        {
            <div class="modal fade" id="userModal-@user.Id" tabindex="-1">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">User Details: @user.UserName</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <h6>Personal Information</h6>
                                    <table class="table table-sm">
                                        <tr>
                                            <th>First Name:</th>
                                            <td>@user.FirstName</td>
                                        </tr>
                                        <tr>
                                            <th>Last Name:</th>
                                            <td>@user.LastName</td>
                                        </tr>
                                        <tr>
                                            <th>Email:</th>
                                            <td>@user.Email</td>
                                        </tr>
                                        <tr>
                                            <th>Phone:</th>
                                            <td>@user.PhoneNumber</td>
                                        </tr>
                                        <tr>
                                            <th>Date of Birth:</th>
                                            <td>@user.DateOfBirth?.ToString("d")</td>
                                        </tr>
                                    </table>

                                    <h6 class="mt-3">Address</h6>
                                    <table class="table table-sm">
                                        <tr>
                                            <th>Address Line 1:</th>
                                            <td>@user.AddressLine1</td>
                                        </tr>
                                        <tr>
                                            <th>Address Line 2:</th>
                                            <td>@user.AddressLine2</td>
                                        </tr>
                                        <tr>
                                            <th>City:</th>
                                            <td>@user.City</td>
                                        </tr>
                                        <tr>
                                            <th>State:</th>
                                            <td>@user.State</td>
                                        </tr>
                                        <tr>
                                            <th>Postal Code:</th>
                                            <td>@user.PostalCode</td>
                                        </tr>
                                        <tr>
                                            <th>Country:</th>
                                            <td>@user.Country</td>
                                        </tr>
                                    </table>
                                </div>

                                <div class="col-md-6">
                                    <h6>Work Information</h6>
                                    <table class="table table-sm">
                                        <tr>
                                            <th>Company:</th>
                                            <td>@user.Company</td>
                                        </tr>
                                        <tr>
                                            <th>Job Title:</th>
                                            <td>@user.JobTitle</td>
                                        </tr>
                                        <tr>
                                            <th>Department:</th>
                                            <td>@user.Department</td>
                                        </tr>
                                    </table>

                                    <h6 class="mt-3">Preferences</h6>
                                    <table class="table table-sm">
                                        <tr>
                                            <th>Language:</th>
                                            <td>@user.PreferredLanguage</td>
                                        </tr>
                                        <tr>
                                            <th>Timezone:</th>
                                            <td>@user.TimeZone</td>
                                        </tr>
                                    </table>

                                    <h6 class="mt-3">Account Information</h6>
                                    <table class="table table-sm">
                                        <tr>
                                            <th>User ID:</th>
                                            <td><small><code>@user.Id</code></small></td>
                                        </tr>
                                        <tr>
                                            <th>Status:</th>
                                            <td>
                                                @if (user.IsActive)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Inactive</span>
                                                }
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>Created:</th>
                                            <td>@user.CreatedAt.ToString("g")</td>
                                        </tr>
                                        <tr>
                                            <th>Updated:</th>
                                            <td>@(user.UpdatedAt?.ToString("g") ?? "Never")</td>
                                        </tr>
                                        <tr>
                                            <th>Last Login:</th>
                                            <td>@(user.LastLoginAt?.ToString("g") ?? "Never")</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info">
            No users found. Run seeding to create test users.
        </div>
    }

    <div class="mt-4">
        <h5>API Endpoints</h5>
        <ul>
            <li><code>GET /api/Users</code> - Get all users</li>
            <li><code>GET /api/Users/active</code> - Get active users</li>
            <li><code>GET /api/Users/inactive</code> - Get inactive users</li>
            <li><code>GET /api/Users/{id}</code> - Get user by ID</li>
            <li><code>GET /api/Users/company/{company}</code> - Get users by company</li>
            <li><code>PUT /api/Users/{id}</code> - Update user</li>
            <li><code>POST /api/Users/{id}/activate</code> - Activate user</li>
            <li><code>POST /api/Users/{id}/deactivate</code> - Deactivate user</li>
        </ul>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
