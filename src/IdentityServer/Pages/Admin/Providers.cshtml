@page
@model IdentityServer.Pages.Admin.ProvidersModel
@{
    ViewData["Title"] = "Dynamic Authentication Providers";
}

<div class="container mt-4">
    <h1>Dynamic Authentication Providers</h1>
    <p class="lead">Manage OIDC and SAML authentication providers</p>

    <ul class="nav nav-tabs" id="providerTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="oidc-tab" data-bs-toggle="tab" data-bs-target="#oidc" type="button" role="tab">
                OIDC Providers
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="saml-tab" data-bs-toggle="tab" data-bs-target="#saml" type="button" role="tab">
                SAML Providers
            </button>
        </li>
    </ul>

    <div class="tab-content mt-3" id="providerTabContent">
        <!-- OIDC Providers -->
        <div class="tab-pane fade show active" id="oidc" role="tabpanel">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">OIDC Authentication Providers</h5>
                    <a href="/Admin/EditProvider?type=oidc" class="btn btn-primary btn-sm">Add OIDC Provider</a>
                </div>
                <div class="card-body">
                    @if (Model.OidcProviders.Any())
                    {
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Scheme</th>
                                    <th>Display Name</th>
                                    <th>Authority</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var provider in Model.OidcProviders)
                                {
                                    <tr>
                                        <td><code>@provider.Scheme</code></td>
                                        <td>@provider.DisplayName</td>
                                        <td>@provider.Authority</td>
                                        <td>
                                            @if (provider.Enabled)
                                            {
                                                <span class="badge bg-success">Enabled</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Disabled</span>
                                            }
                                        </td>
                                        <td>
                                            <a href="/Admin/EditProvider?id=@provider.Id&type=oidc" class="btn btn-sm btn-outline-primary">Edit</a>
                                            <form method="post" asp-page-handler="ToggleOidc" asp-route-id="@provider.Id" style="display:inline;">
                                                <button type="submit" class="btn btn-sm btn-outline-warning">
                                                    @(provider.Enabled ? "Disable" : "Enable")
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            No OIDC providers configured. Click "Add OIDC Provider" to create one.
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- SAML Providers -->
        <div class="tab-pane fade" id="saml" role="tabpanel">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">SAML Authentication Providers</h5>
                    <a href="/Admin/EditProvider?type=saml" class="btn btn-primary btn-sm">Add SAML Provider</a>
                </div>
                <div class="card-body">
                    @if (Model.SamlProviders.Any())
                    {
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Scheme</th>
                                    <th>Display Name</th>
                                    <th>IdP Entity ID</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var provider in Model.SamlProviders)
                                {
                                    <tr>
                                        <td><code>@provider.Scheme</code></td>
                                        <td>@provider.DisplayName</td>
                                        <td>@provider.IdpEntityId</td>
                                        <td>
                                            @if (provider.Enabled)
                                            {
                                                <span class="badge bg-success">Enabled</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Disabled</span>
                                            }
                                        </td>
                                        <td>
                                            <a href="/Admin/EditProvider?id=@provider.Id&type=saml" class="btn btn-sm btn-outline-primary">Edit</a>
                                            <form method="post" asp-page-handler="ToggleSaml" asp-route-id="@provider.Id" style="display:inline;">
                                                <button type="submit" class="btn btn-sm btn-outline-warning">
                                                    @(provider.Enabled ? "Disable" : "Enable")
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            No SAML providers configured. Click "Add SAML Provider" to create one.
                            <br><br>
                            <strong>Note:</strong> SAML support requires additional implementation. See DYNAMIC_AUTHENTICATION.md for details.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <h5>Quick Links</h5>
        <ul>
            <li><a href="/Account/Login">Login Page</a> - See dynamic providers in action</li>
            <li><a href="/api/DynamicProviders/all">API: All Providers</a> (JSON)</li>
            <li><a href="/api/DynamicProviders/oidc">API: OIDC Providers</a> (JSON)</li>
            <li><a href="/api/DynamicProviders/saml">API: SAML Providers</a> (JSON)</li>
        </ul>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
